<!--Search bar-->
@model ListPlaceBindingModel

@{ 
    var provinceCitySelectList = Sporty.DAL.Constants.Data.ProvinceCitys.OrderByDescending(s => s)
        .Select(m => new SelectListItem()
        {
            Text = m,
            Value = m
        }).Append(new SelectListItem()
        {
            Text = "Tất cả",
            Value = "All"
        }).Reverse();
    var fieldTypeSelectList = Sporty.DAL.Constants.Data.FieldTypes.OrderBy(s => s)
        .Select(m => new SelectListItem()
        {
            Text = m,
            Value = m
        }).Append(new SelectListItem()
        {
            Text = "Tất cả",
            Value = "All"
        }).Reverse();
}

<div class="form-search-wrap mb-3" data-aos="fade-up" data-aos-delay="200">
    @using (Html.BeginForm("List", "Place", FormMethod.Get))
    {
        <div class="row align-items-center">
            <div class="col-lg-12 mb-4 mb-xl-0 col-xl-4">
                @Html.TextBoxFor(m => m.Keyword, new { @class = "form-control rounded", @placeholder = "Tên hoặc quận huyện" })
            </div>
            <div class="col-lg-12 mb-4 mb-xl-0 col-xl-3">
                <div class="wrap-icon">
                    <span class="icon icon-room"></span>
                    @Html.DropDownListFor(m => m.ProvinceCity, provinceCitySelectList, new { @class = "form-control rounded" })
                </div>
            </div>
            <div class="col-lg-12 mb-4 mb-xl-0 col-xl-3">
                <div class="select-wrap">
                    <span class="icon"><span class="icon-keyboard_arrow_down"></span></span>
                    @Html.DropDownListFor(m => m.ProvinceCity, fieldTypeSelectList, new { @class = "form-control rounded" })
                </div>
            </div>
            <div class="col-lg-12 col-xl-2 ml-auto text-right">
                <input type="submit" class="btn btn-primary btn-block rounded" value="Search">
            </div>
        </div>
    }
</div>